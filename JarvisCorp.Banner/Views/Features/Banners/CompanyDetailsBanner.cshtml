@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel
@{

}
<section class="hero hero-block @Model.Rendering.Parameters["BackgroundColor"]" id="hero-main" style="">
    <div class="hero-slide-menu">
        <ul class="nav slide-nav">
            <li data-slideid="0"><a href="#">About Us</a></li>
        </ul>
    </div>
    <div class="hero-background-container">
        <div class="hero-background large-loaded">
            @Html.Sitecore().Field("Image")
        </div>

        <div class="hero-caption"><a href="#"></a></div>
    </div>
    <div class="color-container" style="background: no-repeat right bottom/85%;">
        <i class="icon icon-blockangle" style=""></i>
        <div class="hero-content">
            <h1>
                @Html.Sitecore().Field("Content Heading")
            </h1>
            <p>
                @Html.Sitecore().Field("Content Intro")
            </p>
        </div>
    </div>
</section>